@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Hi " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
             <input id="btnLogoff" class="btn btn-success btn-md pull-right" type="button" value="Log Off" onclick="Logoff()" style="padding-top: 6px;   border-top-width: 1px; margin-top: 8px;" />
        </li>
    </ul>
}

<script>
    function Logoff() {
        sessionStorage.removeItem('accessToken');
        window.location.href = 'Login.html';
    }
</script>